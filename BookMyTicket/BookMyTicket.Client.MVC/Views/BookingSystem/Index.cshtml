@model IEnumerable<BookMyTicket.Client.MVC.TheatreServiceWebReference.TheatreDTO>

@{
    ViewBag.Title = "BookMyTicket System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Theatres</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaData)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaData)
            </td>
            <td>
                @Html.ActionLink("Get Seats Availability", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
